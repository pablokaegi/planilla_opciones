# Inky Web Backend Configuration
# Copy this file to .env and update with your values

# Market Data API Configuration
# Replace with your actual BYMA/Merval API base URL
MARKET_DATA_BASE_URL=https://api.example.com

# Endpoints (relative to base URL)
STOCKS_ENDPOINT=/live/arg_stocks
OPTIONS_ENDPOINT=/live/arg_options

# Cache settings (seconds)
CACHE_TTL_SECONDS=20

# API timeout (seconds)
API_TIMEOUT=10

# Risk-free rate for Argentine market (annual, as decimal)
# Example: 0.35 = 35% (adjust based on current BADLAR or similar)
DEFAULT_RISK_FREE_RATE=0.35

# CORS origins (comma-separated without brackets or quotes)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Debug mode
DEBUG=True
